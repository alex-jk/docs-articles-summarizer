{
    "name": "Docs Articles Summarizer Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python" // Automatically installs the Python extension in VS Code
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash" // Sets default terminal to bash
            }
        }
    },
    "postCreateCommand": "pip install -r requirements.txt"
}