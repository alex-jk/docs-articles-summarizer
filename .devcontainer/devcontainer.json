{
    "name": "Docs Articles Summarizer Environment",
    "build": {
        "context": ".", // Set the context to the root (current directory)
        "dockerfile": "Dockerfile" // Reference Dockerfile in the root
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },
    "postCreateCommand": "pip install -r requirements.txt"
}